<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oleg.l0002_tasklayout.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <AutoCompleteTextView
                android:text="1"
                android:textColor="#000000"
                android:background="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView5"
                android:layout_weight="1"
                android:textAlignment="center" />

            <AutoCompleteTextView
                android:text="2"
                android:textColor="#000000"
                android:background="#FFD700"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView4"
                android:layout_weight="1"
                android:textAlignment="center" />

            <AutoCompleteTextView
                android:text="3"
                android:textColor="#000000"
                android:background="#76ee00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView3"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>

        <AutoCompleteTextView
            android:text="4"
            android:textColor="#000000"
            android:background="#98f5ff"
            android:layout_width="match_parent"
            android:id="@+id/autoCompleteTextView6"
            android:layout_height="70dp"
            android:textAlignment="center" />

        <AutoCompleteTextView
            android:text="5"
            android:textColor="#000000"
            android:background="#1874cd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/autoCompleteTextView7"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <AutoCompleteTextView
                android:text="6"
                android:textColor="#000000"
                android:background="#b22222"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView16"
                android:layout_weight="1"
                android:textAlignment="center" />

            <AutoCompleteTextView
                android:text="7"
                android:textColor="#000000"
                android:background="#ff1493"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView15"
                android:layout_weight="1"
                android:textAlignment="center" />

            <AutoCompleteTextView
                android:text="8"
                android:textColor="#000000"
                android:background="#bcee68"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView14"
                android:layout_weight="1"
                android:textAlignment="center" />

            <AutoCompleteTextView
                android:text="9"
                android:textColor="#000000"
                android:background="#7fffd4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteTextView13"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
